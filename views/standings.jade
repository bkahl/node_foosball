extends layout

block content
	.container
		h3=title
		table.table.table-striped
			thead
				tr
					th #
					th Player
					th GP
					th W
					th L
					th GF
					th GA
					th DIFF
					th SM
					th DM
					th YS
					th BS
					th GPonO
					th GPonD
					
			tbody
				each user, i in userlist
					if(user)
						tr
							td=i+1
							td
								if(user.games)
									a(href='/player/'+user._id)=user.fullname
								else
									span=user.fullname
							td=user.gamesPlayed
							td=user.wins
							td=user.losses
							td=user.goalsFor
							td=user.goalsAgainst
							if ((user.goalsFor-user.goalsAgainst) > 0)
								td.positive
									span +
									span=(user.goalsFor-user.goalsAgainst)
							else if ((user.goalsFor-user.goalsAgainst) == 0)
								td=span=(user.goalsFor-user.goalsAgainst)
							else 
								td.negative=(user.goalsFor-user.goalsAgainst)
							td=user.singleMatches
							td=user.doubleMatches
							td=user.yellowSide
							td=user.blackSide
							td=user.onOffense
							td=user.onDefense
		div.glossary
			ul
				li 
					b GP: 
					span Games Played
				li 
					b SM: 
					span Single Matches
				li 
					b DM: 
					span Double Matches
		div.glossary
			ul
				li 
					b YS: 
					span Yellow Side
				li 
					b BS: 
					span Black Side
				li 
					b GPonO: 
					span Games Played on Offense
		div.glossary
			ul
				li
					b GPonD: 
					span Games Played on Defense
				li
					b W: 
					span Wins
				li
					b L: 
					span Losses
		div.glossary
			ul
				li 
					b GF: 
					span Goals For
				li 
					b GA: 
					span Goals Against
				li 
					b DIFF: 
					span Goal Differential
