extends layout

block content
	.container
		h3=title
		table.table.table-striped
			thead
				tr
					th Game
					th GT
					th POS
					th SD
					th PRTN
					th W/L
					th S
					th OS
					th O
					th RG
					
			tbody
				if(player.games)
					each game, i in player.games
						if(game !== null)
							tr
								td=i+1
								td=game.gameType
								td=game.position
								td=game.side
								td=game.partner
								if(game.win)
									td W
								else
									td L
								td=game.score
								td=game.opponentScore
								td=game.opponentNames
								td
									button.btn.btn-primary(type='button') 
										a(href='/removegame/player/'+userID+'/'+i) Delete

		div.glossary
			ul
				li 
					b GT: 
					span Game Type
				li 
					b POS: 
					span Position
				li 
					b SD: 
					span Side
		div.glossary
			ul
				li
					b PRTN: 
					span Partner
				li
					b W/L: 
					span Win or Loss
				li
					b S: 
					span Score
		div.glossary
			ul
				li
					b OS: 
					span Opponent Score
				li
					b O: 
					span Opponents
				li
					b RG: 
					span Remove Game

		br

		button.btn.btn-primary(type='button')
			a(href='/standings') Back to Standings
